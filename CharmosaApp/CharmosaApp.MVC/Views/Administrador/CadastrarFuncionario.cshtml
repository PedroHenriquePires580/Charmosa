@model CharmosaApp.MVC.ViewModels.FuncionarioViewModel

@{
    ViewData["Title"] = "CadastrarFuncionario";
    Layout = "_Layout";

}

<h2>CadastrarFuncionario</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarFuncionario" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Nome, "Nome", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Nome, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Sobrenome, "Sobrenome", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Sobrenome, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sobrenome, null, new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Salario, "Salario (R$)", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Salario, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Salario, null, new { @class = "text-danger" })
            </div>
            <!-- Lista de função-->
            <!-- fim Lista de função-->
            <div class="form-group row">
                @Html.LabelFor(model => model.Login, "Login", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Login, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Login, null, new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Senha, "Senha", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Senha, null, new { @class = "form-control",@type="password" })
                @Html.ValidationMessageFor(model => model.Senha, null, new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @Html.Label("Cadastrar", "Cadastrar", new { @class = "form-control btn btn-primary col-sm-2", @type = "submit" })
                @*<input type="submit" value="Create" class= />*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
